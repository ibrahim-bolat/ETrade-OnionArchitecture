@model IEnumerable<RoleDto>

@{
    Layout = "Admin/_AdminLayout";
    ViewBag.Title = "Roller";
}

<div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
                <div class="col-sm-12">
                    <div class="alert  alert-success alert-dismissible fade show" role="alert">
                        <span class="badge badge-pill badge-success">Success</span> You successfully read this important alert message.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>

        <div class="container">
            <div class="col-sm-6">
            <p class="mt-3">
                <a asp-area="Admin" asp-action="CreateRole" asp-controller="Role" class="btn btn-outline-primary">Rol Ekle</a>
            </p>

                <div class="table table-responsive">
                    <table class="table table-bordered table-hover table-striped">
                        <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <button type="button" class="btn btn-outline-danger roleDeleteButton" data-id="@item.Id">Sil</button>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
                </div>
        </div>

    </div> <!-- .content -->
@section Scripts {
    <script>
        (function($) {
             $(".roleDeleteButton").on("click", function() {
                 var Id = $(this).attr("data-id");
                 Swal.fire({
                     title: 'Rolü Silmek İstediğinizden Emin misiniz?',
                     text: "Rolü silmeye onay verdiğiniz zaman rol silinerek bu role sahip kullanıcılar rolün yetkilerini artık kullanamayacaktır.!",
                     icon: 'warning',
                     showCancelButton: true,
                     confirmButtonColor: '#3085d6',
                     cancelButtonColor: '#d33',
                     confirmButtonText: 'Evet!',
                     cancelButtonText: 'İptal'
                 }).then((result) => {
                     if (result.isConfirmed) {
                         $.ajax({
                              type: "POST",
                              url: '/Admin/Role/DeleteRole',
                              data: {
                                     id: Id
                                 },
                             dataType: "json",
                               success: function (deleteResult) {
                                   if (deleteResult.success) {
                                       Swal.fire({
                                           title: 'Silindi?',
                                           text: "Rol Başarıyla Silindi",
                                           icon: 'success',
                                       }).then((result) => {
                                        window.location = '/Admin/Role/Index';
                                      })
                                 } else {
                                     Swal.fire({
                                      title: 'Hata',
                                      text: "Rol Silinemedi",
                                      icon: 'error',
                                     });
                                 }
                             },
                             error: function(errormessage) {
                                 Swal.fire({
                                      title: 'Hata',
                                      text: "Rol Silinemedi",
                                      icon: 'error',
                                 });
                             }
                         });
                     }
                     return false;
                 });
             });
   })(jQuery);

    </script>
}

