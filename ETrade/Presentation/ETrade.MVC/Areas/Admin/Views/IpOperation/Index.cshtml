@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "IP İşlemleri";
}


@section Style {
    <link href="~/lib/datatables/css/datatables.min.css" rel="stylesheet" />
    <style>

        /* ipModal remove footer line */

        #ipModal .modal-footer {
            border-top: 0 none;
        }

        /* datatable style */
        .btn-export-excel {
            background-color: #198754 !important;
            color: white !important;
        }

        .btn-export-pdf {
            background-color: #dc3545 !important;
            color: white !important;
        }

        .btn-export-print {
            background-color: #ffc107 !important;
            color: white !important;
        }

        .buttons-page-length, .dt-button-collection {
            background-color: #17a2b8 !important;
            color: white !important;
        }

        .dt-buttons button {
            margin-right: 5px !important;
        }

        div.dt-button-collection {
            margin: 0 !important;
            padding: 0 !important;
            overflow: hidden !important;
        }

        a.dt-button.dropdown-item.button-page-length.active {
            background-color: white !important;
            color: black !important;
        }

        .dt-header, .dt-footer {
            display: flex !important;
            justify-content: space-between !important;
            flex-wrap: wrap !important;
        }

        @@media only screen and (max-width: 992px) {
            .dt-header, .dt-footer {
                justify-content: center !important;
            }
        }

        .dt-header div, .dt-footer div {
            margin-bottom: 2px !important;
        }

        /* ipModal Checkbox Switch Change Color */
        .custom-control-input:focus ~ .custom-control-label::before {
            border-color: #28a745 !important;
            box-shadow: #28a745 !important;
        }

        .custom-control-input:checked ~ .custom-control-label::before {
            border-color: #28a745 !important;
            background-color: #28a745 !important;
        }

        .custom-control-input:active ~ .custom-control-label::before {
            background-color: #28a745 !important;
            border-color: #28a745 !important;
        }

        .custom-control-input:focus:not(:checked) ~ .custom-control-label::before {
            border-color: #28a745 !important;
        }

        .custom-control-input-green:not(:disabled):active ~ .custom-control-label::before {
            background-color: #28a745 !important;
            border-color: #28a745 !important;
        }
    </style>
}

    <div class="breadcrumbs">
        <div class="col-sm-4">
            <div class="page-header float-left">
                <div class="page-title">
                    <h1>Dashboard</h1>
                </div>
            </div>
        </div>
        <div class="col-sm-8">
            <div class="page-header float-right">
                <div class="page-title">
                    <ol class="breadcrumb text-right">
                        <li class="active">Dashboard</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content mt-3">
        <div class="col-sm-12">
            <div class="alert  alert-success alert-dismissible fade show" role="alert">
                <span class="badge badge-pill badge-success">Success</span> You successfully read this important alert message.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        </div>
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h2>Rol İşlemleri</h2>
                </div>
                <div class="card-body">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ipCreateModal" onclick="clearCreateModalTextBox();disabledCreateModalTextBox(false);">
                        <i class="fa fa-plus">IP Ekle</i>
                    </button><br /><br />
                    <table id="ipTable" class="table table-striped table-bordered table-hover dt-responsive nowrap" style="width:100%">
                        <thead>
                            <tr class="btn-primary text-center">
                                <th class="text-center">Id</th>
                                <th class="text-center">IP Aralık Başlangıcı</th>
                                <th class="text-center">IP Aralık Sonu</th>
                                <th class="text-center">Liste Türü</th>
                                <th class="text-center">Durumu</th>
                                <th class="text-center">İşlemler</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div> <!-- .content -->
    <div id="ipCreateModalForm">
        <partial name="PartialViews/_IpCreateModalPartial" />
    </div>
    <div id="ipUpdateModalForm">
        <partial name="PartialViews/_IpUpdateModalPartial" />
    </div>
@section Scripts {
    <script src="~/js/inputmask/jquery.inputmask.min.js"></script>
    <script src="~/lib/datatables/js/datatables.min.js"></script>
    <script src="~/admin/js/IpOperation/IpTable.js"></script>
}
