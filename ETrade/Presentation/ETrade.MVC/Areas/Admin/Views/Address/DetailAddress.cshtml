@model DetailAddressDto
@{
    Layout = "Admin/_AdminLayout";
    ViewData["Title"] = "Adres Detay";
}
@section Style {
    <style>
      /*------------------------------------------------------------------
          Fancybox Gallery Section
      -------------------------------------------------------------------*/
      
      .gallery_section_inner .column {
          background: #fff;
          box-shadow: 0 0 13px -10px #000;
          overflow: hidden;
      }
      
      .heading_section {
          border-top: solid #1ed085 2px;
          background: #15283c;
      }
      
      .heading_section h4 {
          color: #fff;
          margin: 0;
          font-weight: 200;
          text-align: center;
          padding: 16px 0 16px;
          font-size: 15px;
      }
   </style>
    <link href="~/lib/fancybox/css/jquery.fancybox.css" rel="stylesheet" />
    <link href="~/lib/select2/css/select2.min.css" rel="stylesheet"/>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="alert  alert-success alert-dismissible fade show" role="alert">
            <span class="badge badge-pill badge-success">Success</span> You successfully read this important alert message.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>

    <div class="container-fluid py-5" style="background-color: #eee;">
        <div class="row">
            <div class="col-lg-4">
                                <!-- User Card Summary-->
                                @await Component.InvokeAsync("UserSummaryCard",new { userId=Model.UserId })
                                <!-- User Card Summary-->
                                <!-- UserImage Card-->
                                @await Component.InvokeAsync("UserImageCard",new { userId=Model.UserId })
                                <!-- UserImage Card-->
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3>Kullanıcı Adres Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <a asp-area="Admin" asp-controller="Address" asp-action="CreateAddress" asp-route-userId="@Model.UserId" class="btn btn-outline-primary mb-2">Adres Ekle</a>
                        <table class="table border-bottom">
                            <thead>
                            <tr>
                                <th class="border-0" style="width: 30%;"></th>
                                <th class="border-0" style="width: 70%;"></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class="border-0">
                                    <label asp-for="FirstName"></label>
                                </td>
                                <td class="text-muted border-0">@Model.FirstName</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="LastName"></label>
                                </td>
                                <td class="text-muted">@Model.LastName</td>
                            </tr>
                            <tr>
                                <td class="border-0">
                                    <label asp-for="Email"></label>
                                </td>
                                <td class="text-muted border-0">@Model.Email</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="PhoneNumber"></label>
                                </td>
                                <td class="text-muted">@Model.PhoneNumber</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="AddressTitle"></label>
                                </td>
                                <td class="text-muted">@Model.AddressTitle</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="AddressType"></label>
                                </td>
                                <td class="text-muted">@Model.AddressType.GetEnumDescription()</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="CityName"></label>
                                </td>
                                <td class="text-muted">@Model.CityName</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="DistrictName"></label>
                                </td>
                                <td class="text-muted">@Model.DistrictName</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="NeighborhoodOrVillageName"></label>
                                </td>
                                <td class="text-muted">@Model.NeighborhoodOrVillageName</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="StreetName"></label>
                                </td>
                                <td class="text-muted">@Model.StreetName</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="PostalCode"></label>
                                </td>
                                <td class="text-muted">@Model.PostalCode</td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="AddressDetails"></label>
                                </td>
                                <td class="text-muted">@Model.AddressDetails </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="Note"></label>
                                </td>
                                <td class="text-muted">@Model.Note </td>
                            </tr>
                            <tr>
                                <td>
                                    <label asp-for="DefaultAddress"></label>
                                </td>
                                <td class="text-muted">@(Model.DefaultAddress? "Evet":"Hayır")</td>
                            </tr>
                            </tbody>
                        </table>
                        <div class="d-flex justify-content-end">
                            <a asp-area="Admin" asp-controller="Account" asp-action="Profile" asp-route-id="@Model.UserId" class="btn btn-primary btn-sm ml-2">Profil</a>
                            <a asp-area="Admin" asp-controller="Address" asp-action="UpdateAddress" asp-route-addressId="@Model.Id" class="btn btn-success btn-sm ml-2">Düzenle</a>
                            <button type="button" id="addressdeletebutton" class="btn btn-danger btn-sm ml-2" data-id="@Model.Id">Sil</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> <!-- .content -->
@section Scripts {
    <script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
    <script src="~/lib/fancybox/js/jquery.fancybox.min.js"></script>
    <script src="~/lib/select2/js/select2.min.js"></script>
    <script src="~/admin/js/userimage/userimage.js" asp-append-version="true"></script>
    <script asp-append-version="true">
        var app = app || {};
        app.Urls = app.Urls || {};
        app.ToastMessages = app.ToastMessages || {};
        app.Urls.profileUrl = '@(Url.Action("Profile", "Account",new { area = "Admin" }))' + '/';
    </script>
    <script src="~/admin/js/address/address.js" asp-append-version="true"></script>
}