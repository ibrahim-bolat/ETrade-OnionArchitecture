@{
    Layout = "Admin/_AdminLayout";
    ViewBag.Title = "Adres Ekle";
}

@section Style {
    <style>
      /*------------------------------------------------------------------
          Fancybox Gallery Section   
      -------------------------------------------------------------------*/
      
      .gallery_section_inner .column {
          background: #fff;
          box-shadow: 0 0 13px -10px #000;
          overflow: hidden;
      }
      
      .heading_section {
          border-top: solid #1ed085 2px;
          background: #15283c;
      }
      
      .heading_section h4 {
          color: #fff;
          margin: 0;
          font-weight: 200;
          text-align: center;
          padding: 16px 0 16px;
          font-size: 15px;
      }
   </style>
    <link href="~/lib/fancybox/css/jquery.fancybox.css" rel="stylesheet"/>
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li class="active">Dashboard</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="content mt-3">
    <div class="col-sm-12">
        <div class="alert  alert-success alert-dismissible fade show" role="alert">
            <span class="badge badge-pill badge-success">Success</span> You successfully read this important alert message.
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
    <div class="container-fluid py-5" style="background-color: #eee;">
        <div class="row">
            <div class="col-lg-4">
                <!-- User Card Summary-->
                @await Component.InvokeAsync("UserSummaryCard", new { userId = Model.UserId })
                <!-- User Card Summary-->
                <!-- UserImage Card-->
                @await Component.InvokeAsync("UserImageCard", new { userId = Model.UserId })
                <!-- UserImage Card-->
            </div>
            <div class="col-lg-8">
                <div id="createAddressPartial" class="card addresspartial">
                    <partial name="PartialViews/_CreateAddressPartial" />
                </div>
            </div>
        </div>
    </div>
</div> <!-- .content -->

@section Scripts {
    <script src="~/js/inputmask/jquery.inputmask.min.js"></script>
    <script src="~/lib/fancybox/js/jquery.fancybox.min.js"></script>
    <script src="~/admin/js/UserImage/userImage.js"></script>
     <script src="~/admin/js/Address/address.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var createAddressMessage = '@TempData["CreateAddressSuccess"]';
            if (createAddressMessage) {
                const Toast = Swal.mixin({
                    toast: true,
                    position: 'top-end',
                    showConfirmButton: false,
                    timer: 5000,
                    timerProgressBar: true,
                    didOpen: (toast) => {
                        toast.addEventListener('click', Swal.close)
                        toast.addEventListener('mouseenter', Swal.stopTimer)
                        toast.addEventListener('mouseleave', Swal.resumeTimer)
                    }
                })

                Toast.fire({
                    icon: 'success',
                    title: 'Adres Kaydedildi',
                    text: 'Adres Kaydetme İşlemi Başarıyla Gerçekleştirildi.',
                })
            }
          });
        </script>
}