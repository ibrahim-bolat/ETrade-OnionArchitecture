@model UpdatePasswordDto

@{
    Layout = "Account/_AccountLayout";
    ViewData["Title"] = "Parola Güncelle";
}
<div class="login-form">
    <form asp-area="Admin" asp-controller="Account" asp-action="UpdatePassword" method="post" class="border border-2 p-2">
        <div class="text-danger ml-4" asp-validation-summary="All">
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input type="password" asp-for="Password" class="form-control" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="RePassword" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9">
                <input type="password" asp-for="RePassword" class="form-control" autocomplete="off"/>
            </div>
        </div>
        <div class="form-group row">
            <div class="offset-sm-3 col-sm-9">
                <input type="submit" value="Şifreyi Güncelle" class="btn btn-warning"/>
            </div>
        </div>
    </form>
</div>
@section Scripts {
    <script src="~/lib/inputmask/jquery.inputmask.min.js"></script>
    <script asp-append-version="true">
        var app = app || {};
        app.Urls = app.Urls || {};
        app.ToastMessages = app.ToastMessages || {};
        app.ToastMessages.updatePasswordMessage = '@TempData["UpdatePasswordStatus"]';
    </script>
    <script src="~/admin/js/account/account.js" asp-append-version="true"></script>
}